<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="50dp"
    tools:context="com.helios.appui.Home"
    android:background="@color/commonBack">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Events"
        android:id="@+id/events"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/text_border"
        android:textColor="@color/textColor"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        android:width="@dimen/menu_item_size"
        android:height="@dimen/menu_item_size"
        android:onClick="showEventList" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pronite"
        android:id="@+id/pronite"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@drawable/text_border"
        android:textColor="@color/textColor"
        android:height="@dimen/menu_item_size"
        android:width="@dimen/menu_item_size"
        android:gravity="center"
        android:layout_margin="10dp"
        android:onClick="showEventList" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Workshops"
        android:id="@+id/workshop"
        android:layout_row="0"
        android:layout_column="1"
        android:background="@drawable/text_border"
        android:textColor="@color/textColor"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:width="@dimen/menu_item_size"
        android:height="@dimen/menu_item_size"
        android:onClick="showEventList" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/logout"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@drawable/text_border"
        android:textColor="@color/textColor"
        android:width="@dimen/menu_item_size"
        android:height="@dimen/menu_item_size"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="Logout"
        android:onClick="logOut" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About"
        android:id="@+id/about"
        android:layout_row="1"
        android:layout_column="1"
        android:background="@drawable/text_border"
        android:textColor="@color/textColor"
        android:layout_margin="10dp"
        android:gravity="center"
        android:height="@dimen/menu_item_size"
        android:width="@dimen/menu_item_size"
        android:onClick="showEventList" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/item6"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@drawable/text_border"
        android:textColor="@color/textColor"
        android:layout_margin="10dp"
        android:gravity="center"
        android:height="@dimen/menu_item_size"
        android:width="@dimen/menu_item_size"
        android:text="Item6"
        android:onClick="showEventList" />
</GridLayout>
